<!doctype html>
<html lang="vi">
  
<head>
  <meta charset="utf-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <title><%= typeof title !== 'undefined' ? title : 'Khách sạn Phenikaa' %></title>

  <!-- Bootstrap CSS -->
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;600;700;800&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/style.css">
  <link
  rel="stylesheet"
  href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"
/>
  

  <style>
    body { font-family: 'Inter', sans-serif; background:#f7fafc; }
    .topbar { background:#06c8f0; padding:10px 0; box-shadow:0 3px 8px rgba(0,0,0,.06); z-index: 9999; position: relative; }
    .brand { font-weight:700; color:#fff !important; text-decoration:none; }

    .navbar .user-avatar {
      width: 28px;
      height: 28px;
      border-radius: 50%;
      object-fit: cover;
      margin-right: 8px;
      border: 1px solid rgba(255,255,255,0.3);
    }
    .navbar .dropdown-toggle span {
      color: #fff;
      font-weight: 600;
    }
  </style>

  
</head>

<body>

<nav class="navbar navbar-expand-lg topbar">
  <div class="container">
    <a class="navbar-brand brand" href="/">KHÁCH SẠN PHENIKAA</a>

    <button class="navbar-toggler border-0" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon" style="filter:invert(1)"></span>
    </button>

    <div class="collapse navbar-collapse" id="mainNav">
      <ul class="navbar-nav ms-auto align-items-center">

        <% if (!currentUser || currentUser.role !== 'admin') { %>
          <li class="nav-item"><a class="nav-link text-white" href="/">Trang chủ</a></li>
          <li class="nav-item"><a class="nav-link text-white" href="/search">Tìm kiếm</a></li>
          <li class="nav-item"><a class="nav-link text-white" href="/about">Giới thiệu</a></li>
        <% } %>

        <% if (currentUser) { %>
          <li class="nav-item dropdown ms-3">
            <a class="nav-link dropdown-toggle d-flex align-items-center text-white" href="#" id="userDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
              <img 
                src="<%= currentUser.avatar ? currentUser.avatar : '/uploads/avatars/default-user.jpg' %>" 
                alt="avatar" 
                class="rounded-circle" 
                width="28" 
                height="28">
              <span>
                <%= currentUser.profile?.name || currentUser.username %>
              </span>
            </a>
            <ul class="dropdown-menu dropdown-menu-end mt-2" aria-labelledby="userDropdown">
              <li><a class="dropdown-item" href="/user/profile">Hồ sơ cá nhân</a></li>
              <% if (currentUser.role === 'user') { %>
                <li><a class="dropdown-item" href="/user/history">Lịch sử đặt phòng</a></li>
              <% } %>
              <% if (currentUser.role === 'admin') { %>
                <li><a class="dropdown-item" href="/admin/dashboard">Trang quản trị</a></li>
              <% } %>
              <li><hr class="dropdown-divider"></li>
              <li><a class="dropdown-item text-danger" href="/auth/logout">Đăng xuất</a></li>
            </ul>
          </li>

        <% } else { %>
          <li class="nav-item nav-auth-links ms-3 d-flex align-items-center">
            <a class="nav-link" href="/auth/login">Đăng nhập</a>
            <a class="nav-link" href="/auth/register">Đăng ký</a>
          </li>
        <% } %>

      </ul>
    </div>
  </div>
</nav>

<main class="site-main">
